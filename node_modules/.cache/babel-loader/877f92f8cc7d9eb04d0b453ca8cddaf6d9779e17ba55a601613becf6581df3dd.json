{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { mapGetters } from 'vuex';\nimport { Message } from 'element-ui';\nimport Swal from 'sweetalert2';\nexport default {\n  name: 'remarkIndex',\n  data() {\n    return {\n      content: '',\n      isSubmitting: false,\n      isShowButton: false\n    };\n  },\n  methods: {\n    showButton() {\n      this.isShowButton = true;\n    },\n    async submitbarrage() {\n      if (!this.isLogin) {\n        // 如果用户没有登录，弹出 SweetAlert2 提示\n        Swal.fire({\n          title: '哎呀~',\n          text: '你还没登录呢，笨蛋~ 🥺',\n          icon: 'warning',\n          confirmButtonText: '马上去登录 💖',\n          background: '#fff0f6',\n          // 可爱粉色背景\n          customClass: {\n            popup: 'cute-popup' // 自定义弹窗的样式\n          }\n        }).then(result => {\n          // 用户点击 \"确认\" 后的处理\n          if (result.isConfirmed) {\n            this.$router.push({\n              path: '/login'\n            }); // 跳转到登录页面\n          }\n        });\n        return; // 停止后续操作\n      }\n      if (!this.content.trim()) {\n        return Message.warning('输入不能为空');\n      }\n      if (this.isSubmitting) return;\n      this.isSubmitting = true;\n    }\n  },\n  computed: {\n    ...mapGetters('user', ['getUserInfo']),\n    islogin() {\n      console.log('Vuex 里的 getUserInfo:', this.getUserInfo);\n      return !!(this.getUserInfo && this.getUserInfo.userId);\n    }\n  }\n};","map":{"version":3,"names":["mapGetters","Message","Swal","name","data","content","isSubmitting","isShowButton","methods","showButton","submitbarrage","isLogin","fire","title","text","icon","confirmButtonText","background","customClass","popup","then","result","isConfirmed","$router","push","path","trim","warning","computed","islogin","console","log","getUserInfo","userId"],"sources":["src/views/remark/index.vue"],"sourcesContent":["<template>\r\n  <div class=\"remark\">\r\n    <h1>树洞</h1>\r\n    <input type=\"text\" placeholder=\"留下点什么啦~\" class=\"dreamBoard\" @click=\"showButton\" v-model=\"content\">\r\n    <button class=\"pushRemark\" v-if=\"isShowButton\" @click=\"submitbarrage\" :disabled=\"isSubmitting\">{{ isSubmitting ? '发射中...' : '发射' }}</button>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { mapGetters } from 'vuex'\r\nimport { Message } from 'element-ui'\r\nimport Swal from 'sweetalert2'\r\nexport default {\r\n  name: 'remarkIndex',\r\n  data () {\r\n    return {\r\n      content: '',\r\n      isSubmitting: false,\r\n      isShowButton: false\r\n    }\r\n  },\r\n  methods: {\r\n    showButton () {\r\n      this.isShowButton = true\r\n    },\r\n    async submitbarrage () {\r\n      if (!this.isLogin) {\r\n        // 如果用户没有登录，弹出 SweetAlert2 提示\r\n        Swal.fire({\r\n          title: '哎呀~',\r\n          text: '你还没登录呢，笨蛋~ 🥺',\r\n          icon: 'warning',\r\n          confirmButtonText: '马上去登录 💖',\r\n          background: '#fff0f6', // 可爱粉色背景\r\n          customClass: {\r\n            popup: 'cute-popup' // 自定义弹窗的样式\r\n          }\r\n        }).then(result => {\r\n          // 用户点击 \"确认\" 后的处理\r\n          if (result.isConfirmed) {\r\n            this.$router.push({ path: '/login' }) // 跳转到登录页面\r\n          }\r\n        })\r\n        return // 停止后续操作\r\n      }\r\n      if (!this.content.trim()) {\r\n        return Message.warning('输入不能为空')\r\n      }\r\n      if (this.isSubmitting) return\r\n      this.isSubmitting = true\r\n    }\r\n\r\n  },\r\n  computed: {\r\n    ...mapGetters('user', ['getUserInfo']),\r\n    islogin () {\r\n      console.log('Vuex 里的 getUserInfo:', this.getUserInfo)\r\n      return !!(this.getUserInfo && this.getUserInfo.userId)\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.remark {\r\n  position: relative;\r\n  top: -280px;\r\n\r\n}\r\nh1 {\r\n  font-family: Arial, Helvetica, sans-serif;\r\n  text-align: center;\r\n  color: white;\r\n}\r\n.dreamBoard {\r\n  width: 200px;\r\n  height: 30px;\r\n  border-radius: 15px;\r\n  box-shadow: 10px white;\r\n  background-color: transparent;\r\n}\r\n\r\n.dreamBoard::placeholder{\r\n  text-indent: 10px;\r\n  color: white;\r\n  opacity: 0.8;\r\n}\r\n.pushRemark {\r\n    width: 80px;\r\n    height: 30px;\r\n    color: white;\r\n    border-radius: 15px;\r\n    cursor: pointer;\r\n    background-color: transparent;\r\n    margin-left: 5px;\r\n    border-radius: 10px;\r\n    font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;\r\n    transition: transform 0.3;\r\n}\r\n</style>\r\n"],"mappings":";AASA,SAAAA,UAAA;AACA,SAAAC,OAAA;AACA,OAAAC,IAAA;AACA;EACAC,IAAA;EACAC,KAAA;IACA;MACAC,OAAA;MACAC,YAAA;MACAC,YAAA;IACA;EACA;EACAC,OAAA;IACAC,WAAA;MACA,KAAAF,YAAA;IACA;IACA,MAAAG,cAAA;MACA,UAAAC,OAAA;QACA;QACAT,IAAA,CAAAU,IAAA;UACAC,KAAA;UACAC,IAAA;UACAC,IAAA;UACAC,iBAAA;UACAC,UAAA;UAAA;UACAC,WAAA;YACAC,KAAA;UACA;QACA,GAAAC,IAAA,CAAAC,MAAA;UACA;UACA,IAAAA,MAAA,CAAAC,WAAA;YACA,KAAAC,OAAA,CAAAC,IAAA;cAAAC,IAAA;YAAA;UACA;QACA;QACA;MACA;MACA,UAAApB,OAAA,CAAAqB,IAAA;QACA,OAAAzB,OAAA,CAAA0B,OAAA;MACA;MACA,SAAArB,YAAA;MACA,KAAAA,YAAA;IACA;EAEA;EACAsB,QAAA;IACA,GAAA5B,UAAA;IACA6B,QAAA;MACAC,OAAA,CAAAC,GAAA,8BAAAC,WAAA;MACA,eAAAA,WAAA,SAAAA,WAAA,CAAAC,MAAA;IACA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}