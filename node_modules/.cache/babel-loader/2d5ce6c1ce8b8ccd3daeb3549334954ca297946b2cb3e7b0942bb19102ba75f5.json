{"ast":null,"code":"import { mapState, mapActions } from 'vuex';\n// import { Dropdown } from 'element-ui'\nimport rainEffect from '@/components/rainEffect.vue';\nimport Navbar from '@/components/Navbar.vue';\nexport default {\n  name: 'LayoutIndex',\n  components: {\n    rainEffect,\n    Navbar\n  },\n  data() {\n    return {\n      isScrolled: false,\n      isVideoPlaying: false,\n      dropdownVisible: false\n    };\n  },\n  computed: {\n    // 获取当前用户的信息\n    ...mapState('user', ['userinfo'])\n  },\n  mounted() {\n    window.addEventListener('scroll', this.handleScroll);\n  },\n  destroyed() {\n    window.removeEventListener('scroll', this.handleScroll);\n  },\n  methods: {\n    ...mapActions('user', ['logoutUser']),\n    handleScroll() {\n      // 判断页面滚动的距离\n      console.log(window.scrollY);\n      if (window.scrollY > 100) {\n        this.isScrolled = true; // 滚动超过100px时，显示导航栏\n      } else {\n        this.isScrolled = false; // 否则隐藏导航栏\n      }\n    },\n    // 控制下拉菜单显示与隐藏\n    toggleDropdown() {\n      this.dropdownVisible = !this.dropdownVisible;\n    },\n    // 退出登录操作\n    logout() {\n      this.logoutUser(); // 清空 Vuex 中的用户信息\n      this.dropdownVisible = false;\n    },\n    // 播放视频并全屏显示\n    playVideo() {\n      this.isVideoPlaying = true; // 设置为播放状态\n\n      // 获取视频元素并设置全屏\n      const video = this.$refs.video;\n      if (video) {\n        // 尝试进入全屏模式\n        if (video.requestFullscreen) {\n          video.requestFullscreen();\n        } else if (video.mozRequestFullScreen) {\n          // Firefox\n          video.mozRequestFullScreen();\n        } else if (video.webkitRequestFullscreen) {\n          // Chrome, Safari and Opera\n          video.webkitRequestFullscreen();\n        } else if (video.msRequestFullscreen) {\n          // IE/Edge\n          video.msRequestFullscreen();\n        }\n      }\n    }\n  }\n};","map":{"version":3,"names":["mapState","mapActions","rainEffect","Navbar","name","components","data","isScrolled","isVideoPlaying","dropdownVisible","computed","mounted","window","addEventListener","handleScroll","destroyed","removeEventListener","methods","console","log","scrollY","toggleDropdown","logout","logoutUser","playVideo","video","$refs","requestFullscreen","mozRequestFullScreen","webkitRequestFullscreen","msRequestFullscreen"],"sources":["src/views/layout/index.vue"],"sourcesContent":["<template>\r\n  <div class=\"maincage\">\r\n    <rainEffect></rainEffect>\r\n    <div :class=\"['head', { 'scrolled': isScrolled }]\">\r\n      <header>\r\n        <div class=\"logo\">\r\n          <img src=\"@/assets/佐助.webp\" alt=\"\" @click=\"playVideo\">\r\n          AHAO BLOG\r\n        </div>\r\n      </header>\r\n      <Navbar></Navbar>\r\n\r\n      <!-- 全屏视频 -->\r\n      <div v-if=\"isVideoPlaying\" class=\"video-container\">\r\n        <video ref=\"video\" autoplay>\r\n          <source src=\"@/assets/佐助.mp4\" type=\"video/mp4\">\r\n          您的浏览器不支持视频播放。\r\n        </video>\r\n        <button @click=\"isVideoPlaying = false\" class=\"close-btn\">关闭</button>\r\n      </div>\r\n\r\n      <!-- 用户头像部分 -->\r\n      <div class=\"self\">\r\n        <el-dropdown trigger=\"click\">\r\n          <span class=\"el-dropdown-link\">\r\n            <img v-if=\"userinfo.userId\" :src=\"userinfo.avatar || require('@/assets/带土.jpg')\" alt=\"User Avatar\" class=\"avatar\">\r\n          </span>\r\n          <el-dropdown-menu slot=\"dropdown\">\r\n            <el-dropdown-item>{{ userinfo.username }}</el-dropdown-item>\r\n            <el-dropdown-item v-if=\"userinfo.userId\">\r\n              <router-link to=\"/profile\" class=\"custom-router-link\"><el-button>个人资料</el-button></router-link>\r\n            </el-dropdown-item>\r\n            <el-dropdown-item v-if=\"userinfo.userId\">\r\n              <el-popconfirm title=\"确定退出登录吗?\" @confirm=\"logout\" placement=\"top\">\r\n                <template #reference>\r\n                  <el-button>退出登录</el-button>\r\n                </template>\r\n              </el-popconfirm>\r\n            </el-dropdown-item>\r\n            <el-dropdown-item v-if=\"!userinfo.userId\">\r\n              <router-link to=\"/login\">登录</router-link>\r\n            </el-dropdown-item>\r\n          </el-dropdown-menu>\r\n        </el-dropdown>\r\n        <router-link v-if=\"!userinfo.userId\" to=\"/login\" class=\"login-link\">登录</router-link>\r\n      </div>\r\n    </div>\r\n\r\n    <router-view></router-view>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { mapState, mapActions } from 'vuex'\r\n// import { Dropdown } from 'element-ui'\r\nimport rainEffect from '@/components/rainEffect.vue'\r\nimport Navbar from '@/components/Navbar.vue'\r\n\r\nexport default {\r\n  name: 'LayoutIndex',\r\n  components: {\r\n    rainEffect,\r\n    Navbar\r\n  },\r\n  data () {\r\n    return {\r\n      isScrolled: false,\r\n      isVideoPlaying: false,\r\n      dropdownVisible: false\r\n\r\n    }\r\n  },\r\n  computed: {\r\n    // 获取当前用户的信息\r\n    ...mapState('user', ['userinfo'])\r\n\r\n  },\r\n  mounted () {\r\n    window.addEventListener('scroll', this.handleScroll)\r\n  },\r\n  destroyed () {\r\n    window.removeEventListener('scroll', this.handleScroll)\r\n  },\r\n  methods: {\r\n    ...mapActions('user', ['logoutUser']),\r\n\r\n    handleScroll () {\r\n      // 判断页面滚动的距离\r\n      console.log(window.scrollY)\r\n\r\n      if (window.scrollY > 100) {\r\n        this.isScrolled = true // 滚动超过100px时，显示导航栏\r\n      } else {\r\n        this.isScrolled = false // 否则隐藏导航栏\r\n      }\r\n    },\r\n    // 控制下拉菜单显示与隐藏\r\n    toggleDropdown () {\r\n      this.dropdownVisible = !this.dropdownVisible\r\n    },\r\n    // 退出登录操作\r\n    logout () {\r\n      this.logoutUser() // 清空 Vuex 中的用户信息\r\n      this.dropdownVisible = false\r\n    },\r\n    // 播放视频并全屏显示\r\n    playVideo () {\r\n      this.isVideoPlaying = true // 设置为播放状态\r\n\r\n      // 获取视频元素并设置全屏\r\n      const video = this.$refs.video\r\n      if (video) {\r\n        // 尝试进入全屏模式\r\n        if (video.requestFullscreen) {\r\n          video.requestFullscreen()\r\n        } else if (video.mozRequestFullScreen) { // Firefox\r\n          video.mozRequestFullScreen()\r\n        } else if (video.webkitRequestFullscreen) { // Chrome, Safari and Opera\r\n          video.webkitRequestFullscreen()\r\n        } else if (video.msRequestFullscreen) { // IE/Edge\r\n          video.msRequestFullscreen()\r\n        }\r\n      }\r\n    }\r\n\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n* {\r\n  margin: 0;\r\n  padding: 0;\r\n  box-sizing: border-box;\r\n}\r\n\r\n.maincage {\r\n  position: relative;\r\n  background: url('@/assets/leimu.jpg') no-repeat center center fixed;\r\n  background-size: cover;\r\n  min-height: 100vh;\r\n  width: 100vw;\r\n  display: flex;\r\n  flex-direction: column;\r\n  align-items: center;\r\n  padding-top: 100px;\r\n}\r\n\r\n.head {\r\n  position: fixed;\r\n  top: 0;\r\n  left: 0;\r\n  width: 100%;\r\n  height: 80px;\r\n  background: rgba(255, 182, 193, 0.8);\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: space-between;\r\n  padding: 0 20px;\r\n  z-index: 1000;\r\n  transition: background-color 0.3s ease, box-shadow 0.3s ease;\r\n}\r\n\r\n.head.scrolled {\r\n  background: rgba(255, 255, 255, 0.9);\r\n  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);\r\n}\r\n\r\n.logo {\r\n  font-size: 28px;\r\n  font-family: 'Comic Sans MS', cursive;\r\n  color: rgb(253, 13, 81);\r\n  display: flex;\r\n  align-items: center;\r\n  cursor: pointer;\r\n  transition: all 0.3s ease;\r\n}\r\n\r\n.logo img {\r\n  width: 40px;\r\n  height: 40px;\r\n  margin-right: 10px;\r\n  border-radius: 50%;\r\n}\r\n\r\n.logo:hover {\r\n  color: rgb(13, 31, 228);\r\n  text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);\r\n  background: rgb(14, 195, 236);\r\n  border-radius: 10px;\r\n}\r\n\r\n.self {\r\n  display: flex;\r\n  align-items: center;\r\n  gap: 15px;\r\n}\r\n\r\n.avatar {\r\n  width: 40px;\r\n  height: 40px;\r\n  border-radius: 50%;\r\n  cursor: pointer;\r\n}\r\n\r\n.el-dropdown-link {\r\n  display: flex;\r\n  align-items: center;\r\n  cursor: pointer;\r\n}\r\n\r\n.custom-router-link {\r\n  text-decoration: none;\r\n  color: inherit;\r\n}\r\n\r\n.video-container {\r\n  position: fixed;\r\n  top: 0;\r\n  left: 0;\r\n  width: 100%;\r\n  height: 100%;\r\n  background: rgba(0, 0, 0, 0.9);\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n  z-index: 9999;\r\n}\r\n\r\n.video-container video {\r\n  max-width: 90%;\r\n  max-height: 90%;\r\n}\r\n\r\n.close-btn {\r\n  position: absolute;\r\n  top: 20px;\r\n  right: 20px;\r\n  padding: 10px 20px;\r\n  background: rgba(255, 255, 255, 0.5);\r\n  color: black;\r\n  border: none;\r\n  cursor: pointer;\r\n  border-radius: 5px;\r\n  font-size: 16px;\r\n}\r\n\r\n.close-btn:hover {\r\n  background: rgba(255, 255, 255, 0.8);\r\n}\r\n\r\n.login-link {\r\n  padding: 10px 15px;\r\n  background: rgb(24, 127, 244);\r\n  color: white;\r\n  border-radius: 5px;\r\n  text-decoration: none;\r\n  font-size: 16px;\r\n  transition: background 0.3s ease;\r\n}\r\n\r\n.login-link:hover {\r\n  background: rgb(13, 31, 228);\r\n}\r\n</style>\r\n"],"mappings":"AAqDA,SAAAA,QAAA,EAAAC,UAAA;AACA;AACA,OAAAC,UAAA;AACA,OAAAC,MAAA;AAEA;EACAC,IAAA;EACAC,UAAA;IACAH,UAAA;IACAC;EACA;EACAG,KAAA;IACA;MACAC,UAAA;MACAC,cAAA;MACAC,eAAA;IAEA;EACA;EACAC,QAAA;IACA;IACA,GAAAV,QAAA;EAEA;EACAW,QAAA;IACAC,MAAA,CAAAC,gBAAA,gBAAAC,YAAA;EACA;EACAC,UAAA;IACAH,MAAA,CAAAI,mBAAA,gBAAAF,YAAA;EACA;EACAG,OAAA;IACA,GAAAhB,UAAA;IAEAa,aAAA;MACA;MACAI,OAAA,CAAAC,GAAA,CAAAP,MAAA,CAAAQ,OAAA;MAEA,IAAAR,MAAA,CAAAQ,OAAA;QACA,KAAAb,UAAA;MACA;QACA,KAAAA,UAAA;MACA;IACA;IACA;IACAc,eAAA;MACA,KAAAZ,eAAA,SAAAA,eAAA;IACA;IACA;IACAa,OAAA;MACA,KAAAC,UAAA;MACA,KAAAd,eAAA;IACA;IACA;IACAe,UAAA;MACA,KAAAhB,cAAA;;MAEA;MACA,MAAAiB,KAAA,QAAAC,KAAA,CAAAD,KAAA;MACA,IAAAA,KAAA;QACA;QACA,IAAAA,KAAA,CAAAE,iBAAA;UACAF,KAAA,CAAAE,iBAAA;QACA,WAAAF,KAAA,CAAAG,oBAAA;UAAA;UACAH,KAAA,CAAAG,oBAAA;QACA,WAAAH,KAAA,CAAAI,uBAAA;UAAA;UACAJ,KAAA,CAAAI,uBAAA;QACA,WAAAJ,KAAA,CAAAK,mBAAA;UAAA;UACAL,KAAA,CAAAK,mBAAA;QACA;MACA;IACA;EAEA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}