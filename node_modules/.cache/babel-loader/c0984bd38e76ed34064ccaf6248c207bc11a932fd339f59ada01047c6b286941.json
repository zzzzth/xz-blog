ackground-color: rgb(14, 195, 236);\r\n  border-radius: 10px;\r\n}\r\n\r\nnav {\r\n  flex-grow: 1; /* 使 nav 占满剩余空间 */\r\n  display: flex;\r\n  justify-content: center; /* 确保 nav 中的 li 居中 */\r\n}\r\n\r\nnav ul {\r\n  display: flex;\r\n  margin: 0;\r\n  padding: 0;\r\n  list-style: none;\r\n}\r\n\r\nnav ul li {\r\n  margin: 0 50px;\r\n}\r\n\r\nnav ul li a {\r\n  text-decoration: none;\r\n  padding: 10px 10px;\r\n  color: rgb(24, 127, 244);\r\n}\r\n\r\nnav ul li a:hover {\r\n  color: rgb(13, 31, 228);\r\n  text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);\r\n  background-color: rgb(14, 195, 236);\r\n  border-radius: 10px;\r\n}\r\n</style>\r\n"],"mappings":"AA8BA;EACAA,IAAA;EACAC,OAAA,GAEA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}